<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Description2Fragment">

    <TextView
        android:id="@+id/textKleimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_kleimo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntoactivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Prochitano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textKleimo" />


</androidx.constraintlayout.widget.ConstraintLayout>